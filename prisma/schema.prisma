datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  firstName   String?
  lastName    String?
  profileImage String?
  age         Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  sex String?
  bodyInfo    BodyInfo?  @relation 
  workoutProgram WorkoutProgram? @relation()

  @@index([email])
}

model BodyInfo {
  id        Int      @id @default(autoincrement())
  userId    Int @unique
  user      User     @relation(fields: [userId], references: [id]) 
  height    Int
  weight    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([userId]) 
}

model WorkoutProgram {
  id Int @id @default(autoincrement())
  userId Int  @unique

  title String
  description String
  programFor Int @unique
  isPublic Boolean

  currentAge Int
  gender Gender
  weeklySessions Int
  bodyType BodyType
  additionalNotes String?
  programStart DateTime
  programEnd DateTime?
  withCoach Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

enum Gender {
  Male
  Female
}

enum BodyType {
  ectomorph
  mesomorph
  endomorph
}